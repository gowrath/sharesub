<!DOCTYPE html>
<html lang="en">
<!--Head-->
<% include partials/head %>

<body>
  <!--Navbar-->
  <% include partials/nav %>
  <!--Main Content-->
  <!--Hero-->
  <section class="container hero">
    <h1 class="red-text text-darken-1">Welcome to
      <%= title %>
    </h1>
    <p class="grey-text text-darken-2">Version 1.0</p>
  </section>
  <!--Carousel-->
  <section class="container sect">
    <div class="carousel carousel-slider center">
      <div class="carousel-item black white-text" id="carousel-1">
      </div>
      <div class="carousel-item black white-text" id="carousel-2">
      </div>
      <div class="carousel-item black white-text" id="carousel-3">
      </div>
    </div>
  </section>
  <!--Cards-->
  <section id="cards" class="container sect">
    <div class="row">
      <div class="col s12 m6 l6 xl4">
        <div class="card yellow darken-4">
          <div class="card-content white-text">
            <span class="card-title">List Your Subs</span>
            <p>
              <li>Netflix</li>
              <li>Disney</li>
              <li>HBO</li>
            </p>
          </div>
          <div class="card-action">
            <a class="btn-floating btn-large waves-effect waves-light red darken-2"><i
                class="material-icons">local_offer</i></a>
          </div>
        </div>
      </div>
      <div class="col s12 m6 l6 xl4">
        <div class="card amber darken-4">
          <div class="card-content white-text">
            <span class="card-title">Your Friends List</span>
            <p>
              <li>Friend 1</li>
              <li>Friend 2</li>
              <li>Friend 3</li>
            </p>
          </div>
          <div class="card-action">
            <a class="btn-floating btn-large waves-effect waves-light red darken-2"><i
                class="material-icons">local_offer</i></a>
          </div>
        </div>
      </div>
      <div class="col s12 m6 l6 xl4">
        <div class="card orange darken-4">
          <div class="card-content white-text">
            <span class="card-title">Cost Calculator</span>
            <p>Annualized Cost</p>
          </div>
          <div class="card-action">
            <a class="btn-floating btn-large waves-effect waves-light red darken-2"><i
                class="material-icons">local_offer</i></a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--Footer-->
  <% include partials/footer %>
  <!--Scripts-->
  <% include partials/scripts %>
  <!--Custom Scripts-->
  <script src="/javascripts/index.js"></script>
</body>

</html>
